<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.life.life.welcome">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_life"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.life.life.cipher.Cipher"
            android:label="@string/title_activity_cipher"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.life.life.we.We"
            android:label="@string/title_activity_we"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>
